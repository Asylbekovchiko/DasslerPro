<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_2x"
    app:layoutDescription="@xml/item_handbook_scene">

    <ImageView
        android:id="@+id/iv_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_iv_expand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/text_bold_2x_black_1a1919"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Lorem ipsum ipsum ipsum ipsum " />

    <TextView
        android:id="@+id/tv_description"
        style="@style/text_regular_1_75x_black_1a1919"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Convallis posuere morbi leo urna molestie." />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@drawable/rounded_rect_grey_2dp_e0e0e0" />

</androidx.constraintlayout.motion.widget.MotionLayout>